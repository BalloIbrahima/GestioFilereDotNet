@page
@model MyApp.Namespace.StudentsListModel
@{
}
 
<div class="container p-3 my-3 bg-dark text-white">
    <h1>Students List</h1>
    <p>List of students in the DB </p>
  </div><br/>
      <a class="btn btn-primary" href="/Student/AddStudent" role="button">Ajouter Etudiant</a>
  <br/><br/>

<form method="post">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Num ° ID</th>
            <th scope="col">Full Name</th>
            <th scope="col">Filiere</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>

          @foreach (var Student in Model.Students){
          <tr>
            <th>@Student.IdStudent</th>
            <td>@Student.FullName</td>
            @foreach (var fl in Model.filieres)
            {
              @if(fl.IdFiliere == Student.IdFiliere){
                <td>@fl.NomFiliere</td>
              }
            }
            <td> 
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure that u want to delete that students')"
              asp-page-handler="delete" asp-route-id="@Student.IdStudent" > Delete </button>
            </td>
                <td><a asp-page="./EditStudent" asp-route-id="@Student.IdStudent" class="btn btn-dark" > EDIT</a>  </td>
          </tr>
          }
        </tbody>
      </table>
</form>
</div>