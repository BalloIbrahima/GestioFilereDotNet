@page
@model MyApp.Namespace.AddStudentModel
@{
    Layout = "_Layout";
}

<div class="container p-3 my-3 bg-dark text-white">
    <h1>Ajouter un Etudiant</h1>
  </div><br/>
        <a class="btn btn-primary" href="/Student/StudentsList" role="button">Liste des Etudiants</a>
  <br/><br/>
  <div class="container">
    <div class="row">
      <div class="col-6 col-md-4">
          <form method="post">
          <div class="form-group">

             <label asp-for="student.FullName"  class="control-label"></label><br/>
             <input asp-for="student.FullName" class="form-control"/>
             <span asp-validation-for="student.FullName" class="text-danger"></span><br/><br/>

             <select asp-for="student.IdFiliere" class="custom-select">
               @foreach (var fl in Model.filieres)
                {
                    <option value="@fl.IdFiliere">@fl.NomFiliere</option>
                }
             </select>
  
          </div>
  
          <tr></tr><tr></tr><tr></tr><input class="btn btn-success" type="Submit" value="Ajouter"/>
          <!--<button type="submit" class="btn btn-primary">Submit</button> -->
  
          </form>
      </div>
    </div>
  </div>