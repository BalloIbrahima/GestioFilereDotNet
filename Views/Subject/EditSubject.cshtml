@page
@model MyApp.Namespace.EditSubjectModel
@{
}

<div class="container p-3 my-3 bg-dark text-white"> <br/><br/>
        <a class="btn btn-primary" href="/Subject/SubjectsList" role="button">Liste des Matieres</a>
  
  <div class="container">
    <div class="row">
      <div class="col-6 col-md-4">
          <form method="post">
          <div class="form-group">

            <input type="hidden" asp-for="subject.IdSubjet"/>
             <label asp-for="subject.NomSubjet"  class="control-label"></label><br/>
             <input asp-for="subject.NomSubjet" class="form-control"/>
             <span asp-validation-for="subject.NomSubjet" class="text-danger"></span>

             <select asp-for="subject.IdFiliere" class="custom-select">
               @foreach (var fl in Model.filieres)
                {
                    <option value="@fl.IdFiliere">@fl.NomFiliere</option>
                }
             </select>

             <select asp-for="subject.IdProf" class="custom-select">
               @foreach (var u in Model.users)
                {
                    @if(u.Status == 'P'){
                      <option value="@u.Id">@u.Nom</option>
                    }
                }
             </select>
  
          </div>
  
          <tr></tr><tr></tr><tr></tr><input class="btn btn-success" type="Submit" value="Enregistrer"/>
  
          </form>
      </div>
    </div>
  </div>